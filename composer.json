{
    "name": "soupmix/mongodb",
    "type": "library",
    "description": "Simple MongoDB abstraction layer adapter to handle CRUD operations.",
    "keywords": ["database", "abstraction layer", "adapters", "mongodb"],
    "homepage": "https://github.com/soupmix/mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehmet Korkmaz",
            "email": "mehmet@mkorkmaz.com",
            "homepage": "https://mkorkmaz.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mongodb": "^1.2",
        "soupmix/base": "^0.8",
        "mongodb/mongodb": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "satooshi/php-coveralls": "~1.0",
        "phpunit/phpcov": "^4.0"
    },
    "autoload": {
        "classmap": [
            "src/MongoDB.php",
            "src/MongoDBQueryBuilder.php"
        ]
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpunit"
        ],
        "phpunit": "php vendor/bin/phpunit"
    }
}